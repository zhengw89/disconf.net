@model DisConf.Web.Service.Model.BizResult<DisConf.Web.Models.Config.UpdateConfigModel>

@{
    ViewBag.Title = "更新配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            @ViewBag.Error
        </div>
    }

    @using (Html.BeginForm("UpdateConfig", "App", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(m => m.Data.AppId)
        @Html.HiddenFor(m => m.Data.EnvId)
        @Html.HiddenFor(m => m.Data.ConfigId)

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Data.AppName)
            </div>
            <div class="col-sm-10 control-label">
                @Html.Label(Model.Data.AppName, new { @class = "pull-left" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Data.EnvName)
            </div>
            <div class="col-sm-10 control-label">
                @Html.Label(Model.Data.EnvName, new { @class = "pull-left" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Data.ConfigName)
            </div>
            <div class="col-sm-10 control-label">
                @Html.Label(Model.Data.ConfigName, new {@class = "pull-left"})
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Data.ConfigValue)
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Data.ConfigValue, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Data.ConfigValue)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <button class="btn btn-primary" type="submit">更新</button>
            </div>
        </div>
    }

</div>
